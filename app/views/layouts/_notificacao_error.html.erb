<% if errors.kind_of?(Array) %> 
    <% errors.each do |error| %> 
        <% error.full_messages.each do |msg| %> 
            toastr["error"]("<%= msg %>"); 
        <% end %> 
    <% end %> 
<% else %> 
    <% errors.full_messages.each do |msg| %> 
        toastr["error"]("<%= msg %>"); 
    <% end %> 
<% end %>

toastr.options = { 
    "closeButton": true, 
    "debug": false, 
    "newestOnTop": false, 
    "progressBar": true, 
    "positionClass": "toast-top-right", 
    "preventDuplicates": false, 
    "onclick": null, 
    "showDuration": "300", 
    "hideDuration": "1000", 
    "timeOut": "5000", 
    "extendedTimeOut": "1000", 
    "showEasing": "swing", 
    "hideEasing": "linear", 
    "showMethod": "fadeIn", 
    "hideMethod": "fadeOut",
  "escapeHtml": true
}