.dropzone {
  min-height: 360px !important;
}
.dropzone .dz-default.dz-message {
  opacity: 1 !important;
  -ms-filter: none !important;
  -webkit-filter: none !important;
  filter: none !important;
  -webkit-transition: opacity 0.3s ease-in-out !important;
  -o-transition: opacity 0.3s ease-in-out !important;
  transition: opacity 0.3s ease-in-out !important;
  background-image: url("<%= asset_path('dropZone/spritemap.png') %>") !important;
  background-repeat: no-repeat !important;
  background-position: 0 0 !important;
  position: absolute !important;
  width: 428px !important;
  height: 123px !important;
  margin-left: -214px !important;
  margin-top: 0 !important;
  top: 25% !important;
  left: 50% !important;
}

@media all and (-webkit-min-device-pixel-ratio:1.5),
(min--moz-device-pixel-ratio:1.5),
(-o-min-device-pixel-ratio:1.5/1),
(min-device-pixel-ratio:1.5),
(-webkit-min-device-pixel-ratio:1.4375),
(-o-min-device-pixel-ratio:23/16),
(min-resolution:138dpi),
(-webkit-min-device-pixel-ratio:1.5),
(-o-min-device-pixel-ratio:3/2),
(min-resolution:1.5dppx) {
  .dropzone .dz-default.dz-message {
    background-image: url("<%= asset_path('dropZone/spritemap@2x.png') %>") !important;
    background-size: 428px 406px !important;
  }
}

.dropzone .dz-preview .dz-error-mark,
.dropzone-previews .dz-preview .dz-error-mark,
.dropzone .dz-preview .dz-success-mark,
.dropzone-previews .dz-preview .dz-success-mark {
  display: block !important;
  opacity: 0 !important;
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)" !important;
  filter: alpha(opacity=0) !important;
  -webkit-transition: opacity 0.4s ease-in-out !important;
  -o-transition: opacity 0.4s ease-in-out !important;
  transition: opacity 0.4s ease-in-out !important;
  background-image: url("<%= asset_path('dropZone/spritemap.png') %>") !important;
  background-repeat: no-repeat !important;
}

@media all and (-webkit-min-device-pixel-ratio:1.5),
(min--moz-device-pixel-ratio:1.5),
(-o-min-device-pixel-ratio:1.5/1),
(min-device-pixel-ratio:1.5),
(-webkit-min-device-pixel-ratio:1.4375),
(-o-min-device-pixel-ratio:23/16),
(min-resolution:138dpi),
(-webkit-min-device-pixel-ratio:1.5),
(-o-min-device-pixel-ratio:3/2),
(min-resolution:1.5dppx) {
  .dropzone .dz-preview .dz-error-mark,
  .dropzone-previews .dz-preview .dz-error-mark,
  .dropzone .dz-preview .dz-success-mark,
  .dropzone-previews .dz-preview .dz-success-mark {
    background-image: url("<%= asset_path('dropZone/spritemap@2x.png') %>") !important;
    background-size: 428px 406px !important;
  }
}


.dropzone .dz-preview .dz-progress .dz-upload,
.dropzone-previews .dz-preview .dz-progress .dz-upload {
  -webkit-animation: loading 0.4s linear infinite !important;
  animation: loading 0.4s linear infinite !important;
  -webkit-transition: width 0.3s ease-in-out !important;
  -o-transition: width 0.3s ease-in-out !important;
  transition: width 0.3s ease-in-out !important;
  border-radius: 2px !important;
  position: absolute !important;
  top: 0 !important;
  left: 0 !important;
  width: 0% !important;
  height: 100% !important;
  background-image: url("<%= asset_path('dropZone/spritemap.png') %>") !important;
  background-repeat: repeat-x !important;
  background-position: 0px -400px !important;
}

@media all and (-webkit-min-device-pixel-ratio:1.5),
(min--moz-device-pixel-ratio:1.5),
(-o-min-device-pixel-ratio:1.5/1),
(min-device-pixel-ratio:1.5),
(-webkit-min-device-pixel-ratio:1.4375),
(-o-min-device-pixel-ratio:23/16),
(min-resolution:138dpi),
(-webkit-min-device-pixel-ratio:1.5),
(-o-min-device-pixel-ratio:3/2),
(min-resolution:1.5dppx) {
  .dropzone .dz-preview .dz-progress .dz-upload,
  .dropzone-previews .dz-preview .dz-progress .dz-upload {
    background-image: url("<%= asset_path('dropZone/spritemap@2x.png') %>") !important;
    background-size: 428px 406px !important;
  }
}

.dz-message span {
  display: none !important;
}