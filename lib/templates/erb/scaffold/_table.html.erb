<%%- model_class=<%= singular_table_name.titleize %> -%>

<% remote ||= remote %>
<% show_collapse ||= show_collapse %>

<div class="accordion accordion-icon-toggle" id="kt_accordion_<%= singular_table_name.titleize %>">
  <div class="mb-5">
    <div class="accordion-header py-3 d-flex" data-bs-toggle="collapse" data-bs-target="#kt_accordion_<%= singular_table_name.titleize %>_item_1">
      <span class="accordion-icon"><span class="svg-icon svg-icon-4"><svg>...</svg></span></span>
      <h3 class="fs-4 fw-semibold mb-0 ms-4"><%%= model_class.model_name.human(count: 2).titleize %></h3>
    </div>
    <div id="kt_accordion_<%= singular_table_name.titleize %>_item_1" class="fs-6 collapse <%%= show_collapse %> ps-10" data-bs-parent="#kt_accordion_<%= singular_table_name.titleize %>">
      <%%= render partial: "admin/<%= plural_table_name %>/datatable" , locals: {remote: remote} %>
    </div>
  </div>
</div>